{% extends 'base.html.twig' %}

{% block title %}Prospect index{% endblock %}

{% block body %}
    <div class="container">
    <h1>Prospect index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Pwd</th>
                <th>Login</th>
                <th>Adresse</th>
                <th>Cp</th>
                <th>Ville</th>
                <th>Tel</th>
                <th>Role</th>
                <th>Actif</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prospect in prospects %}
            <tr>
                <td>{{ prospect.id }}</td>
                <td>{{ prospect.email }}</td>
                <td>{{ prospect.pwd }}</td>
                <td>{{ prospect.login }}</td>
                <td>{{ prospect.adresse }}</td>
                <td>{{ prospect.cp }}</td>
                <td>{{ prospect.ville }}</td>
                <td>{{ prospect.tel }}</td>
                <td>{{ prospect.role }}</td>
                <td>{{ prospect.actif }}</td>
                <td>{{ prospect.createdAt ? prospect.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('prospect_show', {'id': prospect.id}) }}">show</a>
                    <a href="{{ path('prospect_edit', {'id': prospect.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
    </div>

    <a href="{{ path('prospect_new') }}">Create new</a>
{% endblock %}
