{% extends 'base.html.twig' %}

{% block title %}New PreInscription{% endblock %}

{% block body %}
<div class="container">
  <h1 class="show">En route pour la pré-inscription</h1>

  <form id="preinscription-form" method="post" action="{{path("pre_inscription_store",{'id':prospect.id})}}">
      <input type="hidden" name="prospect_id" value="{{ prospect.id }}" >
       {# <input type="hidden" name="prospect_date" value="{{ prospect.id }}" > #}
     
      <div class="form-check">
      
        <label class="form-check-label"  for="exampleRadios1" value="1">
        Contrat de formation (formation initiale)
        </label>
        <input class="form-check-input-left" name="CategFormation" type="radio" value="1" id="exampleRadios1" checked>
      </div>
      <div class="form-check">
        
        <label class="form-check-label" for="exampleRadios2">
          Convention de formation (formation en alternance)
        </label>
        <input class="form-check-input-left" name="CategFormation" type="radio" value="2" id="exampleRadios2" >
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputFormation">Nom de la formation</label>
          <input type="text" class="form-control" id="inputFormation" value="{{prospect.parcours.formation.type}}">
        </div>
      
     
        <div class="form-group col-md-6">
          <label for="inputDuree">Durée de la formation</label>
          <input type="text" class="form-control" id="inputDuree" value="{{prospect.parcours.formation.duree}}">
        </div>
      </div>
      
     
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputSession">Session</label>
          <input type="text" class="form-control" id="inputSession" value="{{prospect.parcours.formation.sessionFormation.nom}}" >
        </div>
      
      
        <div class="form-group col-md-6">
          
           <label for="inputLieu">Lieu de la formation </label>
          <input type="text" class="form-control" id="inputLieu" value="{{prospect.parcours.formation.lieuFormation}}">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="inputContenu">Contenu de la formation : </label>
          <input type="textarea" class="form-control" id="inputContenu" value="{{prospect.parcours.formation.contenuFormation}}" >       
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputNom">NOM :</label>
          <input type="text" class="form-control" id="inputNom"value="{{prospect.nom}}">
        </div>
        <div class="form-group col-md-6">
          <label for="inputPrenom">PRENOM :</label>
          <input type="text" class="form-control" id="inputPrenom" value="{{prospect.prenom}}">
        </div>
      </div>
      <div class="form-group">
        <label for="inputAddress">Adresse :</label>
        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St"value="{{prospect.adresse}}">
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputCity">Ville :</label>
          <input type="text" class="form-control" id="inputCity" value="{{prospect.ville}}">
        </div>
        <div class="form-group col-md-6">
          <label for="inputState">CP :</label>
          <input id="inputState" class="form-control"value="{{prospect.cp}}">
        </div>
      </div>
     <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputTel">Tel :</label>
          <input type="text" class="form-control" id="inputTel" value="{{prospect.tel}}">
        </div>
        <div class="form-group col-md-6">
          <label for="inputMail">Mail :</label>
          <input id="inputMail" class="form-control"value="{{prospect.email}}">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputDateNaissance">Né(e) le :</label>
          <input type="text" class="form-control" id="inputDateNaissance" value="{{prospect.lieuNaissance}}">
        </div>
        <div class="form-group col-md-6">
          <label for="inputLieuNaissance">à :</label>
          <input id="inputLieuNaissance" class="form-control"value="{{prospect.lieuNaissance}}">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputCity">Dépt naissance</label>
          <input type="text" class="form-control" id="inputCity" value="{{prospect.deptNaissance}}">
        </div>
        <div class="form-group col-md-6">
          <label for="inputState">Nationalité :</label>
          <input id="inputState" class="form-control"value="{{prospect.nationalite}}">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="inputDiplomeCours">Diplôme en cours</label>
          <input type="text" class="form-control" id="inputDiplomeCours" value="{{prospect.deptNaissance}}">
        </div>
        <div class="form-group col-md-4">
          <label for="inputDiplomeObtenu">Diplôme obtenu :</label>
          <input id="inputDiplomeObtenu" class="form-control"value="{{prospect.nationalite}}">
            
        </div>
        <div class="form-group col-md-4">
          <label for="inputHandicap">Handicap :</label>
          <input id="inputHandicap" class="form-control"value="{{prospect.nationalite}}">
            
        </div>
        
      </div>
    
      <div class="form-group col-md-4">
        <label for="inputDiplomeCout">Coût de la formation</label>
        <input type="text" class="form-control" id="inputDiplomeCout"  value="{{prospect.parcours.formation.coutFormation}}">
      
      <div class="form-check">
 
       
        {% if (prospect.parcours.formation.matSupp) %}
         <label for="form-check-label">Matériel supplémentaire  </label>
        <input class="form-check-input-left" type="checkbox" id="MatCheck1" checked>
               
        {% endif %}    
      </div>
      
      <div class="form-row">
        <div class="form-group col-md-12">
        <label  for="ChargeDe">
          A la charge de : 
          </label>
        </div>
        
      </div>
      <div class="form-row">
        <div class="form-check">
          <label class="form-check-label" for="exampleRadios3">
            Intégralement du candidat
          </label>
          <input class="form-check-input-left" name="ChargeDe" type="radio" value="1" id="exampleRadios3">
          
        </div>
        <div class="form-check">
          <label class="form-check-label" for="exampleRadios4">
            Partiellement du candidat
          </label>
          <input class="form-check-input-left" name="ChargeDe" type="radio" value="2" id="exampleRadios4" >
        </div>
        <div class="form-check">
          <label class="form-check-label" for="exampleRadios5">
          Structure externe, nom : {{prospect.parcours.structure.nom}}
          </label>
          <input class="form-check-input-left" name="ChargeDe" type="radio" value="3" id="exampleRadios5" >
        </div>
        
          <label  for="Financement">
            Mode de paiement de la formation : 
            </label>
        
      </div>
      <div class="form-row">
        <div class="form-group col-md-12">
          <div class="form-check">
            <label class="form-check-label " for="exampleRadios6">
              Alternance (Alpha PRIMO)
            </label>
            <input class="form-check-input-left" name="financement"  type="radio" value="1" id="exampleRadios6">
          
          </div>
          <div class="form-check">
            <label class="form-check-label" for="exampleRadios7">
              CPF (Alpha PRIMO)
            </label>
            <input class="form-check-input-left" name="financement" type="radio" value="2" id="exampleRadios7" >
          </div>
          <div class="form-check">
            <label class="form-check-label" for="exampleRadios8">
            Continue (Alpha PRIMO)
            </label>
            <input class="form-check-input-left"name="financement"  type="radio" value="3" id="exampleRadios8" >
          </div>
          <div class="form-check">
            <label class="form-check-label" for="exampleRadios9">
            Formation initiale Conduisant à un diplôme d'état (GROUPE ARES MATHZAP FORMATION)
            </label>
            <input class="form-check-input-left" name="financement"  type="radio" value="4" id="exampleRadios9" >
          </div>
          <div class="form-check">
            <label class="form-check-label" for="exampleRadios10">
            Formation privée (GROUPE ARES MATHZAP FORMATION)
            </label>
            <input class="form-check-input-left"name="financement" type="radio" value="5" id="exampleRadios10" >
          </div>
        </div>
      </div>
    
  
    <button id="preinscription" type="submit" class="btn btn-primary btn-lg       float-right">Pré-Inscription <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-chevron-double-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M3.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L9.293 8 3.646 2.354a.5.5 0 0 1 0-.708z"/>
      <path fill-rule="evenodd" d="M7.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L13.293 8 7.646 2.354a.5.5 0 0 1 0-.708z"/>
      </svg>
    </button>
      

  </form>

    {# <a href="{{ path('pre_inscription_index') }}">back to list</a> #}
</div>
{% endblock %}
